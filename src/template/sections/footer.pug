- var linkItems = ['facebook-official', 'twitter', 'google-plus', 'linkedin']
- var linkUrls = ['facebook.com', 'twitter.com', 'google.com', 'linkedin.com']

footer.footer
    .footer__top
        .container
            .footer__title Get in touch
            .footer__links
                each item, key in linkItems
                    a.footer__social(href="http://" + linkUrls[key] target="_blank")
                        i(class="fa fa-" + item aria-hidden="true")
                        span.visually-hidden=item
            .footer__text Subscribe to uor newsletter to stay ...
            form(action="#" method="post")
                .footer__field: input.footer__input(type="email" placeholder="Email Adress")
                button(type="submit").button Subscribe

